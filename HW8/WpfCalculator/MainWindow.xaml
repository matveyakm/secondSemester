<Window x:Class="WpfCalculator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfCalculator"
        mc:Ignorable="d"
        Title="MainWindow" Height="497" Width="400">
    <Border BorderThickness="10" CornerRadius="10">
        <Grid Name="calcGrid">
            <Grid.RowDefinitions>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition ></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <TextBox Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="4" Margin="10,10,10,10" TextWrapping="Wrap" VerticalAlignment="Center" FontSize="30" TextAlignment="Right" Text="{Binding Path=FormulaText}"/>

            <Button Grid.Column="0" Grid.Row="1"  Margin="5,5,5,5" Content="7" FontSize="30" Click="ButtonClick"/>
            <Button Grid.Column="1" Grid.Row="1"  Margin="5,5,5,5" Content="8" FontSize="30" Click="ButtonClick"/>
            <Button Grid.Column="2" Grid.Row="1"  Margin="5,5,5,5" Content="9" FontSize="30" Click="ButtonClick"/>
            <Button Grid.Column="3" Grid.Row="1"  Margin="5,5,5,5" Content="/" FontSize="30" Click="ButtonClick"/>

            <Button Grid.Column="0" Grid.Row="2"  Margin="5,5,5,5" Content="4" FontSize="30" Click="ButtonClick"/>
            <Button Grid.Column="1" Grid.Row="2"  Margin="5,5,5,5" Content="5" FontSize="30" Click="ButtonClick"/>
            <Button Grid.Column="2" Grid.Row="2"  Margin="5,5,5,5" Content="6" FontSize="30" Click="ButtonClick"/>
            <Button Grid.Column="3" Grid.Row="2"  Margin="5,5,5,5" Content="*" FontSize="30" Click="ButtonClick"/>

            <Button Grid.Column="0" Grid.Row="3"  Margin="5,5,5,5" Content="1" FontSize="30" Click="ButtonClick"/>
            <Button Grid.Column="1" Grid.Row="3"  Margin="5,5,5,5" Content="2" FontSize="30" Click="ButtonClick"/>
            <Button Grid.Column="2" Grid.Row="3"  Margin="5,5,5,5" Content="3" FontSize="30" Click="ButtonClick"/>
            <Button Grid.Column="3" Grid.Row="3"  Margin="5,5,5,5" Content="-" FontSize="30" Click="ButtonClick"/>

            <Button Grid.Column="0" Grid.Row="4"  Margin="5,5,5,5" Content="0" FontSize="30" Click="ButtonClick"/>
            <Button Grid.Column="1" Grid.Row="4"  Margin="5,5,5,5" Content="," FontSize="30" Click="ButtonClick"/>
            <Button Grid.Column="2" Grid.Row="4"  Margin="5,5,5,5" Content="^" FontSize="30" Click="ButtonClick"/>
            <Button Grid.Column="3" Grid.Row="4"  Margin="5,5,5,5" Content="+" FontSize="30" Click="ButtonClick"/>

            <Button Grid.Column="0" Grid.Row="5"  Grid.ColumnSpan="2" Margin="5,5,5,5" Content="C" FontSize="30" Click="ButtonClick_C"/>
            <Button Grid.Column="2" Grid.Row="5"  Grid.ColumnSpan="2" Margin="5,5,5,5" Content="=" FontSize="30" Click="ButtonClick"/>
        </Grid>
    </Border>
</Window>
